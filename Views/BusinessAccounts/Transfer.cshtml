@model Bank.Models.BusinessAccount

@{
    ViewData["Title"] = "Transfer";
}

<h1>Transfer</h1>

<h4>CheckingAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Transfer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" disabled />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="AccountId" class="control-label"></label>
                <input asp-for="AccountId" class="form-control" disabled />
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Current Balance </label>
                <input asp-for="Balance" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label class="control-label">Transfer Account Id: </label>
                <input name="id2" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">transfer amount: </label>
                <input name="amount" class="form-control" min="0" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Transfer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
