@model Bank.Models.TermDeposit

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TermDeposit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span asp-validation-for="StartDate" class="text-danger"></span>
            <span asp-validation-for="EndDate" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" value="termDeposit" disabled class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Inital amount</label>
                <input asp-for="Balance" class="form-control" min="0"/>
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Mature Date</label>
                <input asp-for="EndDate" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
